{
    "name": "peekphp/peek",
    "description": "A package to ask DeepSeek to give detailed answer of improvements on PHP files/snippets.",
    "keywords": ["php", "boilerplate", "package"],
    "license": "MIT",
    "bin": [
        "bin/peek"
    ],
    "authors": [
        {
            "name": "Bas Visser",
            "email": "basvisser20@outlook.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "laravel/pint": "^1.18.1",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.5.1",
        "pestphp/pest-plugin-type-coverage": "^3.1",
        "phpstan/phpstan": "^1.12.7",
        "rector/rector": "^1.2.8",
        "symfony/var-dumper": "^7.1.6"
    },
    "autoload": {
        "psr-4": {
            "Peek\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:lint": "pint --test",
        "test:unit": "pest --exactly=100",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:types",
            "@test:refactor"
        ]
    }
}
